<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "言伝-トップ-"%></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta charset="UTF-8";>
<link rel="stylesheet" href="asset/stylesheets/style.scss">
  </head>

<header>
<h1><%= link_to 'KOTOZUTE', root_path %></h1>
</header>

  <body>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if user_signed_in? %>
    <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
    <p><%= link_to "マイページ", user_path(current_user) %></p>
  <% end %>

    <%= yield %>
  </body>
</html>
