<p id="notice"><%= notice %></p>

<h1>Lectures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.class_name %></td>
        <td><%= lecture.class_id %></td>
        <td><%= lecture.evaluation %></td>
        <td><%= lecture.grade %></td>
        <td><%= lecture.module %></td>
        <td><%= lecture.department %></td>
        <td><%= lecture.room %></td>
        <td><%= lecture.day %></td>
        <td><%= lecture.period %></td>
        <td><%= lecture.attendance %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture', new_lecture_path %>
