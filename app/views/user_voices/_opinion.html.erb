<%= form_with(model: user_voice, url: lecture_user_voices_path, local: true) do |form| %>
    <% if user_voice.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user_voice.errors.count, "error") %> prohibited this user_voice from being saved:</h2>
  
        <ul>
        <% user_voice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="field">
      <%= form.label :comment, "言伝" %>
      <%= form.text_field :comment, id: :user_voice_comment %>
    </div>
  
    <div class="field">
      <%= form.label :satisfaction, "授業満足度" %>
      <label><%= form.radio_button :satisfaction, "--" , {:checked => true}%>--</label>
      <label><%= form.radio_button :satisfaction, "1" %>1</label>
      <label><%= form.radio_button :satisfaction, "2" %>2</label>
      <label><%= form.radio_button :satisfaction, "3" %>3</label>
      <label><%= form.radio_button :satisfaction, "4" %>4</label>
      <label><%= form.radio_button :satisfaction, "5" %>5</label>
      </div>
  
    <div class="actions">
      
      <%= form.submit(["言伝を残す"]) %>
    </div>
  <% end %>
  